<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>

  <%= form_with model: @user, local:true do |f| %>
    <div class="form-group">
      <label for="user-name">Name</label>
      <%= f.text_field :name, id:"user-name", class:"form-control" %>
    </div>

    <div class="form-group">
      <label for="user-image">Image</label><br>
      <%= f.attachment_field :profile_image, id:"user-image", placeholder: "ファイルを選択" %>
    </div>

    <div class="form-group">
      <label for="user-introduction">Introduction</label>
      <%= f.text_area :introduction, id:"user-introduction", class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Update User',class:"btn btn-secondary" %>
    </div>
  <% end %>
</div>
