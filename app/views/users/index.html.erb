<div class="col-md-3">
  <%= render 'users/info', user: current_user %>
  <%= render 'users/link_to_edit_user', user: current_user %>
  <%= render 'books/new', book: @new_book %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to user_path(user.id) do %>
            Show
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
